{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% block stats %}
{% endblock %}

{% oro_title_set({params : {"%entity.name%": entity.name|default('N/A') }}) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
        'path' : path('tlt_organization_unit_working_schedule_update', { id: entity.id }),
        'entity_label': 'tlt.organizationunit.workingschedule.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
        'dataUrl': path('tlt_organization_unit_working_schedule_api_delete_working_schedule', {'id': entity.id}),
        'dataRedirect': path('tlt_organization_unit_working_schedule_index'),
        'aCss': 'no-hash remove-button',
        'id': 'btn-remove-user',
        'dataId': entity.id,
        'entity_label': 'tlt.organizationunit.workingschedule.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('tlt_organization_unit_working_schedule_index'),
    'indexLabel': 'tlt.organizationunit.workingschedule.entity_plural_label'|trans,
    'entityTitle': entity.name
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {%- set workingScheduleInformation -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderProperty('tlt.organizationunit.workingschedule.name.label'|trans, entity.name) }}
            {{ UI.renderProperty('tlt.organizationunit.workingschedule.min_hour.label'|trans, entity.minHour|date('H:i:s', 'UTC')) }}
            {{ UI.renderProperty('tlt.organizationunit.workingschedule.max_hour.label'|trans, entity.maxHour|date('H:i:s', 'UTC')) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
    {%- endset -%}
    {% set dataBlocks = [
    {
    'title': 'tlt.organizationunit.workingschedule.block.general'|trans,
    'class': 'active',
    'subblocks': [
    {'data' : [workingScheduleInformation]}
    ]
    }
    ] %}


    {% set id = 'workingScheduleView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}
