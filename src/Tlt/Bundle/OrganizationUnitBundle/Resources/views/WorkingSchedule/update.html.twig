{% extends 'OroUIBundle:actions:update.html.twig' %}

{% oro_title_set({params : {"%entity.name%": (entity.name is defined ? entity.name : null), "%entityName%": 'tlt.organizationunit.workingschedule.entity_label'|trans }}) %}

{% set entityId = entity.id %}
{% set formAction = entityId ? path('tlt_organization_unit_working_schedule_update', { 'id': entityId}) : path('tlt_organization_unit_working_schedule_create') %}

{% block navButtons %}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('tlt_organization_unit_working_schedule_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
    {{ UI.cancelButton(path('tlt_organization_unit_working_schedule_index')) }}
{% endblock navButtons %}

{% block pageHeader %}
    {% if entityId %}
        {% set breadcrumbs = {
        'entity': entity,
        'indexPath': path('tlt_organization_unit_working_schedule_index'),
        'indexLabel': 'tlt.organizationunit.workingschedule.entity_plural_label'|trans,
        'entityTitle': entity.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'tlt.organizationunit.workingschedule.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'working_schedule-form' %}

    {% form_theme form.minHour with ["TltOrganizationUnitBundle:WorkingSchedule:Form/fields.html.twig"] %}
    {% form_theme form.maxHour with ["TltOrganizationUnitBundle:WorkingSchedule:Form/fields.html.twig"] %}

    {% set dataBlocks = [{
    'title': 'tlt.organizationunit.workingschedule.block.general'|trans,
    'class': 'active',
    'subblocks': [
    {
    'title': '',
    'data': [
    form_row(form.name),
    form_row(form.minHour),
    form_row(form.maxHour),

    form.owner is defined ? form_row(form.owner) : '',
    ]
    }
    ]
    }] %}

    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}

    <style type="text/css">
        div[style].selector {
            display: inline-block;
            width: 44px !important;
        }

        div.hm {
            display: inline-block;
            line-height: 28px;
            height: 30px;
            font-size: 12px;
            padding: 0 5px;
            vertical-align: top;
        }

        div[style].selector span {
            width: 42px !important;
        }

    </style>

{% endblock content_data %}