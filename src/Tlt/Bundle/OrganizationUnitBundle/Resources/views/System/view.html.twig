{% extends 'OroUIBundle:actions:view.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

{% block stats %}
{% endblock %}

{% oro_title_set({params : {"%entity.name%": entity.name|default('N/A') }}) %}

{% block navButtons %}
    {% if resource_granted('EDIT', entity) %}
        {{ UI.editButton({
        'path' : path('tlt_organization_unit_system_update', { id: entity.id }),
        'entity_label': 'tlt.organizationunit.system.entity_label'|trans
        }) }}
    {% endif %}
    {% if resource_granted('DELETE', entity) %}
        {{ UI.deleteButton({
        'dataUrl': path('tlt_organization_unit_system_api_delete_system', {'id': entity.id}),
        'dataRedirect': path('tlt_organization_unit_system_index'),
        'aCss': 'no-hash remove-button',
        'id': 'btn-remove-user',
        'dataId': entity.id,
        'entity_label': 'tlt.organizationunit.system.entity_label'|trans
        }) }}
    {% endif %}
{% endblock navButtons %}

{% block pageHeader %}
    {% set breadcrumbs = {
    'entity': entity,
    'indexPath': path('tlt_organization_unit_system_index'),
    'indexLabel': 'tlt.organizationunit.system.entity_plural_label'|trans,
    'entityTitle': entity.name
    } %}

    {{ parent() }}
{% endblock pageHeader %}

{% block content_data %}
    {%- set systemInformation -%}
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {%- set serviceTypeData -%}
            {%- if entity.serviceType -%}
                <a href="{{ path('tlt_organization_unit_service_type_view', {'id': entity.serviceType.id}) }}">
                    {{ entity.serviceType }}
                </a>
            {%- endif -%}
            {%- endset -%}

            {{ UI.renderHtmlProperty('tlt.organizationunit.service.service_type.label'|trans, serviceTypeData) }}
            {{ UI.renderProperty('tlt.organizationunit.system.name.label'|trans, entity.name) }}
        </div>
        <div class="responsive-block">
            {{ entityConfig.renderDynamicFields(entity) }}
        </div>
    </div>
    {%- endset -%}
    {% set dataBlocks = [
    {
    'title': 'tlt.organizationunit.system.block.general'|trans,
    'class': 'active',
    'subblocks': [
    {'data' : [systemInformation]}
    ]
    }
    ] %}


    {% set id = 'systemView' %}
    {% set data = { 'dataBlocks': dataBlocks } %}

    {{ parent() }}
{% endblock content_data %}